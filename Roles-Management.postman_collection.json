{
  "info": {
    "name": "Roles Management",
    "description": "Roles management API endpoints for CRUD operations on roles",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Roles",
      "item": [
        {
          "name": "Get All Roles",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseURL}}/rbac/roles",
              "host": ["{{baseURL}}"],
              "path": ["rbac", "roles"]
            },
            "description": "Retrieve all roles with their associated capabilities"
          }
        },
        {
          "name": "Create Role",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Administrator\",\n  \"slug\": \"admin\",\n  \"is_system\": false\n}"
            },
            "url": {
              "raw": "{{baseURL}}/rbac/roles",
              "host": ["{{baseURL}}"],
              "path": ["rbac", "roles"]
            },
            "description": "Create a new role"
          }
        },
        {
          "name": "Update Role",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Administrator\",\n  \"slug\": \"updated-admin\"\n}"
            },
            "url": {
              "raw": "{{baseURL}}/rbac/roles/{{role_id}}",
              "host": ["{{baseURL}}"],
              "path": ["rbac", "roles", "{{role_id}}"]
            },
            "description": "Update an existing role"
          }
        }
      ]
    },
    {
      "name": "Role Capabilities",
      "item": [
        {
          "name": "Sync Role Capabilities",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"capability_keys\": [\"users.manage\", \"roles.view\", \"system.admin\"]\n}"
            },
            "url": {
              "raw": "{{baseURL}}/rbac/roles/{{role_id}}/capabilities",
              "host": ["{{baseURL}}"],
              "path": ["rbac", "roles", "{{role_id}}", "capabilities"]
            },
            "description": "Sync capabilities for a specific role"
          }
        }
      ]
    }
  ],
