{
  "info": {
    "name": "Permissions Management",
    "description": "Permissions/Capabilities management API endpoints. Note: Full CRUD operations may need to be implemented as direct capability endpoints are not currently available.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Capabilities",
      "item": [
        {
          "name": "Get All Capabilities (via Roles)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseURL}}/rbac/roles",
              "host": ["{{baseURL}}"],
              "path": ["rbac", "roles"]
            },
            "description": "Retrieve all capabilities through roles (current implementation)"
          }
        },
        {
          "name": "Sync Role Capabilities",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"capability_keys\": [\"users.manage\", \"roles.view\", \"products.read\"]\n}"
            },
            "url": {
              "raw": "{{baseURL}}/rbac/roles/{{role_id}}/capabilities",
              "host": ["{{baseURL}}"],
              "path": ["rbac", "roles", "{{role_id}}", "capabilities"]
            },
            "description": "Sync capabilities for a specific role"
          }
        }
      ]
    },
    {
      "name": "User Policies",
      "item": [
        {
          "name": "Get User Permissions",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "X-Branch-Id",
                "value": "{{branch_id}}",
                "description": "Optional branch ID for branch-specific permissions"
              }
            ],
            "url": {
              "raw": "{{baseURL}}/rbac/users/{{user_id}}/permissions",
              "host": ["{{baseURL}}"],
              "path": ["rbac", "users", "{{user_id}}", "permissions"]
            },
            "description": "Get user permissions based on roles and policies"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseURL",
      "value": "http://localhost:8000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "1|iQkYFkQymCitaSPgIr4ZBHgt0SbvV4302vp0A0Uo1cae004f",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "role_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "branch_id",
      "value": "",
      "type": "string"
    }
  ]
}