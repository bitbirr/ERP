  "item": [
    {
      "name": "Users",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseURL}}/users?per_page=10",
              "host": ["{{baseURL}}"],
              "path": ["users"],
              "query": [
                {
                  "key": "per_page",
                  "value": "10"
                }
              ]
            },
            "description": "Retrieve paginated list of all users with their role assignments"
          }
        },
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"password\": \"password123\",\n  \"password_confirmation\": \"password123\",\n  \"email_verified_at\": \"2025-09-05T07:00:00.000000Z\"\n}"
            },
            "url": {
              "raw": "{{baseURL}}/users",
              "host": ["{{baseURL}}"],
              "path": ["users"]
            },
            "description": "Create a new user"
          }
        },
        {
          "name": "Get User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseURL}}/users/{{user_id}}",
              "host": ["{{baseURL}}"],
              "path": ["users", "{{user_id}}"]
            },
            "description": "Retrieve a specific user with role assignments"
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated John Doe\",\n  \"email\": \"updated.john.doe@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseURL}}/users/{{user_id}}",
              "host": ["{{baseURL}}"],
              "path": ["users", "{{user_id}}"]
            },
            "description": "Update an existing user"
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseURL}}/users/{{user_id}}",
              "host": ["{{baseURL}}"],
              "path": ["users", "{{user_id}}"]
            },
            "description": "Delete a user"
          }
        }
      ]
    }
