{
  "info": {
    "name": "Capability Management",
    "description": "Capability management API endpoints. Note: Direct capability CRUD operations are not currently implemented. Capabilities are managed through roles.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Capabilities via Roles",
      "item": [
        {
          "name": "Get All Capabilities",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseURL}}/rbac/roles",
              "host": ["{{baseURL}}"],
              "path": ["rbac", "roles"]
            },
            "description": "Retrieve all capabilities through associated roles (current implementation)"
          }
        },
        {
          "name": "Sync Role Capabilities",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"capability_keys\": [\"users.create\", \"users.read\", \"users.update\", \"users.delete\"]\n}"
            },
            "url": {
              "raw": "{{baseURL}}/rbac/roles/{{role_id}}/capabilities",
              "host": ["{{baseURL}}"],
              "path": ["rbac", "roles", "{{role_id}}", "capabilities"]
            },
            "description": "Sync capabilities for a specific role"
          }
        }
      ]
    },
